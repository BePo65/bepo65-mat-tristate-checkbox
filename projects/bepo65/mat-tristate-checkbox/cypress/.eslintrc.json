{
  "extends": "../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "projects/bepo65/mat-tristate-checkbox/cypress/tsconfig.json",
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "settings": {
        "import/parsers": {
          "@typescript-eslint/parser": [
            ".ts"
          ]
        },
        "import/resolver": {
          "node": true,
          "typescript": {
            "project": [
              "projects/bepo65/mat-tristate-checkbox/cypress/tsconfig.json"
            ]
          }
        }
      },
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "lib",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "lib",
            "style": "kebab-case"
          }
        ]
      }
    },
    {
      "files": [
        "*.json"
      ]
    },
    {
      "files": [
        "*.html"
      ]
    }
  ]
}
